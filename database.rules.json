{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "resources": {
      ".read": "auth != null",
      ".write": "auth != null" // Or more restrictive rules
    },
    "reservations": {
      ".read": "auth != null",
      ".write": "auth != null" // Or more restrictive rules
    },
    "settings": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'Admin'"
    }
  }
}